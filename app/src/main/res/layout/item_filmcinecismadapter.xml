<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/dp_24"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginTop="@dimen/dp_24"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="#141931"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_filmcinecism"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            fresco:roundAsCircle="true"
            />
        <TextView
            android:id="@+id/name_filmcinecism"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_filmcinecism"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/dp_5"
            />
        <RatingBar
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_5"
            android:progressTint="#e8185e"
            android:progressBackgroundTint="#fff"
            android:id="@+id/rat_filmcinecism"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_filmcinecism"
            android:layout_below="@id/name_filmcinecism"
            android:numStars="5" />

        <TextView
            android:id="@+id/scroe_filmcinecism"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rat_filmcinecism"
            android:layout_below="@id/name_filmcinecism"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/data_filmcinecism"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#fff"
            android:text="04ï¼24  09:15"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_2"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/cinmecontent_filmcinecism"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/dp_10"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        >

        <CheckBox
            android:id="@+id/item_dianzanfilmcinecism"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/filmcinecismselector"
            android:button="@null"
            />

        <TextView
            android:id="@+id/zancount_filmcinecism"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/item_dianzanfilmcinecism"
            android:layout_toRightOf="@+id/item_dianzanfilmcinecism"
            android:text="1"
            android:textSize="@dimen/sp_16"
            android:textColor="#fff" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/imgrecycle_filmcinecism"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_toLeftOf="@id/replynum_filmcinecism"
            ></android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/replynum_filmcinecism"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="__________________________________________"
        android:gravity="center"
        android:textColor="#fff"
        />
</LinearLayout>
