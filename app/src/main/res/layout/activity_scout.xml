<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    tools:context=".view.activity.ScoutActivity">
    <LinearLayout
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/film_shape"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/scout_fanhui"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/fanhui"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_5"
            />
        <EditText
            android:id="@+id/edit_scou"
            android:hint="请输入你想要搜索的电影"
            android:background="@drawable/serach_shape"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:paddingLeft="@dimen/dp_10"
            android:textColorHint="#fff"
            />
        <TextView
            android:id="@+id/serach_scoutv"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="@dimen/dp_50"
            android:text="搜索"
            android:textColor="#fff"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:gravity="center"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_scout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        ></android.support.v7.widget.RecyclerView>
</LinearLayout>