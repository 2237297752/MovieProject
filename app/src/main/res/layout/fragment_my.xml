<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".view.fragment.FragmentMy">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/invalid_name"
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_153">
        <LinearLayout
            android:id="@+id/ll_my"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_41"
                android:layout_marginLeft="@dimen/dp_164"
                android:textSize="@dimen/sp_16"
                android:layout_marginRight="117dp"
                android:text="我的"
                android:textColor="#fff"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_22" />
            <ImageView
                android:src="@drawable/xinxi"
                android:layout_marginTop="@dimen/dp_44"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_17" />
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_90"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"
        app:cardCornerRadius="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_94"
        android:layout_alignParentTop="true"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_90">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_image"
                fresco:roundAsCircle="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_width="@dimen/dp_46"
                android:layout_height="@dimen/dp_46" />
            <TextView
                android:id="@+id/myname_card"
                android:text="电影故事"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:textColor="#141931"
                android:layout_marginTop="@dimen/dp_34"
                android:layout_marginRight="@dimen/dp_138"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_22" />
            <ImageView
                android:id="@+id/gengduo_gushi"
                android:src="@drawable/shape_gengduo"
                android:layout_marginTop="@dimen/dp_39"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_12" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:id="@+id/my_ll_one"
        android:layout_below="@id/card_view"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="#1c2243"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_12"
            android:src="@drawable/wodedianyingpiao"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_20" />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_190"
            android:text="电影票"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_20" />
        <ImageView
            android:id="@+id/gengduo_dianyingpiao"
            android:src="@drawable/shape_gengduobai"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_12" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_11"
        android:layout_below="@id/my_ll_one"
        android:layout_marginLeft="@dimen/dp_24"
        android:orientation="vertical"
        android:background="@drawable/my_shezhi"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_235">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/btn_my_guanzhu"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp_66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/group_2"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24" />
                <TextView
                    android:text="我的关注"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#deffffff"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_14" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_my_yvyue"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp_72"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/group_4"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24" />
                <TextView
                    android:text="我的预约"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#deffffff"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_14" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_goupiaojilu"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="@dimen/dp_12"
                    android:src="@drawable/chongzhijilu"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24" />
                <TextView
                    android:text="购票记录"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#deffffff"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_14" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/btn_kanguodedianying"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/chongzhijilug"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24" />
                <TextView
                    android:text="看过的电影"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#deffffff"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_14" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_my_pinglun"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp_72"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/group_3"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24" />
                <TextView
                    android:text="我的评论"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#deffffff"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_14" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_yijianfankui"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="@dimen/dp_12"
                    android:src="@drawable/yijianfankui_01"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24" />
                <TextView
                    android:text="意见反馈"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#deffffff"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_14" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/btn_my_shezhi"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/my_shezhi_image"
                    android:layout_marginTop="@dimen/dp_27"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24" />
                <TextView
                    android:text="设置"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#deffffff"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_14" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>