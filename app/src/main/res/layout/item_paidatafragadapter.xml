<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="#141931"
    >
    <ImageView
        android:id="@+id/img_paidatafrag"
        android:layout_width="@dimen/dp_84"
        android:layout_height="@dimen/dp_101" />
    <TextView
        android:id="@+id/name_paidatafrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_paidatafrag"
        android:layout_marginLeft="@dimen/dp_20"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/dirctor_paidatafrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_paidatafrag"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_below="@id/name_paidatafrag"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/actor_paidatafrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_paidatafrag"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_below="@id/dirctor_paidatafrag"
        android:textColor="#fff"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/score_paidatafrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_paidatafrag"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_below="@id/actor_paidatafrag"
        android:textColor="#fff"
        />
    <Button
        android:id="@+id/btn_goupiao"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_20"
        android:background="@drawable/button_shape"
        android:text="购票"
        android:textColor="#fff"
        android:layout_below="@id/actor_paidatafrag"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_5"
        />
</RelativeLayout>
