<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.activity.RegisterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/login_backgroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_305">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/login_image_fanhui"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_28"
                android:background="@drawable/fanhui"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16" />
            <TextView
                android:layout_marginLeft="@dimen/dp_120"
                android:text="注册"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_22" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="#141931"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/register_et_name"
            android:hint="名字"
            android:textSize="@dimen/sp_14"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@drawable/login_namekuang"
            android:textColorHint="#fff"
            android:paddingLeft="@dimen/dp_20"
            android:layout_gravity="center"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_11"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_44" />
        <EditText
            android:id="@+id/register_et_phone"
            android:hint="账号"
            android:textSize="@dimen/sp_14"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/login_namekuang"
            android:textColorHint="#fff"
            android:paddingLeft="@dimen/dp_20"
            android:layout_gravity="center"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_11"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_44" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/sp_12"
            android:background="@drawable/login_namekuang"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_44">
            <EditText
                android:id="@+id/register_et_pwd"
                android:hint="密码"
                android:textSize="@dimen/sp_14"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_11"
                android:layout_width="@dimen/dp_226"
                android:layout_height="@dimen/dp_44" />
            <ImageView
                android:id="@+id/register_image_delete"
                android:background="@drawable/pwd_shanchu"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginBottom="@dimen/dp_14"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16" />
            <ImageView
                android:id="@+id/register_image_eye"
                android:background="@drawable/pwd_yanjing"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/sp_16"
                android:layout_marginBottom="@dimen/sp_16"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_8" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_44">
            <EditText
                android:hint="验证码"
                android:textColor="#fff"
                android:background="@drawable/login_pwdkuang"
                android:textColorHint="#fff"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:id="@+id/register_et_yanzhengma"
                android:layout_width="@dimen/dp_216"
                android:layout_height="@dimen/dp_44" />
            <Button
                android:text="获取验证码"
                android:layout_gravity="center"
                android:textColor="#333333"
                android:id="@+id/register_btn_getyanzhengma"
                android:background="@drawable/login_wjmmkuang"
                android:layout_width="@dimen/dp_96"
                android:layout_height="@dimen/dp_44" />
        </LinearLayout>
        <TextView
            android:id="@+id/register_tv_login"
            android:textSize="@dimen/sp_10"
            android:text="已有账号 立即登录"
            android:textColor="#999"
            android:layout_marginLeft="@dimen/dp_252"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_14" />
        <Button
            android:id="@+id/register_btn_register"
            android:text="注册"
            android:background="@drawable/register_registerkuang"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_44" />
    </LinearLayout>
</LinearLayout>